<?php
/* =================================================
   Section 1: Date and Time Functions in PHP
   ================================================= */

$todayDate = date("d-m-Y");
$nowTime   = date("H:i:s");

echo "Today's Date: $todayDate <br>";
echo "Current Time: $nowTime <br><br>";

$firstDate  = strtotime("2025-03-01");
$secondDate = strtotime("2025-03-20");

$totalDays = ($secondDate - $firstDate) / 86400;

echo "Number of days between the two dates: $totalDays";
echo "<br><br>";

/* =================================================
   Section 2: File Handling Operations
   ================================================= */

$filePath = "record.txt";
$message  = "This file was created and written using PHP.";

$fileRef = fopen($filePath, "w");
fwrite($fileRef, $message);
fclose($fileRef);

$fileRef = fopen($filePath, "r");
$fileContent = fread($fileRef, filesize($filePath));
fclose($fileRef);

echo "File content is:<br>";
echo $fileContent;
echo "<br><br>";

/* =================================================
   Section 3: Database Connection Using MySQL
   ================================================= */

$dbHost = "localhost";
$dbUser = "root";
$dbPass = "";
$dbName = "test";

$dbConnection = mysqli_connect($dbHost, $dbUser, $dbPass, $dbName);

if ($dbConnection) {
    echo "Database connection successful";
} else {
    echo "Database connection failed";
}

mysqli_close($dbConnection);
?>
________________________________________________________________________________________________________________________
